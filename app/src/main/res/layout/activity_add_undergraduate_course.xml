<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.AddUndergraduateCourseActivity"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/slide_menu">


    </com.google.android.material.navigation.NavigationView>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddContactActivity"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#768591"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/addCourseLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="20dp">

            <TextView
                android:id="@+id/addCoursePageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="New Course"
                android:textColor="#768591"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>


            <TextView
                android:id="@+id/addCourseNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Name: "
                android:textColor="#768591" />

            <EditText
                android:id="@+id/addCourseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:hint="Enter Name" />
            <TextView
                android:id="@+id/addCourseCodeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Code: "
                android:textColor="#768591" />

            <EditText
                android:id="@+id/addCourseCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:hint="Enter Code" />

            <TextView
                android:id="@+id/addCourseDescField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Description:"
                android:textColor="#768591" />

            <EditText
                android:id="@+id/addCourseDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="20dp"
                android:hint="Enter Description" />

            <TextView
                android:id="@+id/addCourseAreaField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Area:"
                android:textColor="#768591" />

            <RadioGroup
                android:id="@+id/addCourseArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/addCourse_coreCourses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Core Courses" />

                <RadioButton
                    android:id="@+id/addCourse_E1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E1 - Elective Courses from Mathematics and Physics" />


                <RadioButton
                    android:id="@+id/addCourse_E2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E2 - Elective Courses from Other Sciences" />

                <RadioButton
                    android:id="@+id/addCourse_E3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E3 - Networks and Telecommunications" />

                <RadioButton
                    android:id="@+id/addCourse_E4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E4 - Hardware and Computer Systems" />

                <RadioButton
                    android:id="@+id/addCourse_E5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E5 - Software Systems and Applications" />

                <RadioButton
                    android:id="@+id/addCourse_E6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E6 - Information Systems" />

                <RadioButton
                    android:id="@+id/addCourse_E7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E7 - Computer Vision and Robotics" />

                <RadioButton
                    android:id="@+id/addCourse_E8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E8 - Algorithms and Computation Theory" />

                <RadioButton
                    android:id="@+id/addCourse_E9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E9 - Society and Informatics" />

                <RadioButton
                    android:id="@+id/addCourse_EE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Free Elective Courses" />
            </RadioGroup>





            <TextView
            android:id="@+id/addCourseECTSField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:text="ECTS:"
            android:textColor="#768591" />

            <EditText
                android:id="@+id/addCourseECTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="20dp"
                android:hint="Enter ECTS" />

            <TextView
                android:id="@+id/addCourseUrlField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Url:"
                android:textColor="#768591" />

            <EditText
                android:id="@+id/addCourseUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="20dp"
                android:hint="Enter Url" />

            <Button
                android:id="@+id/saveBtn_addCourse"
                android:layout_width="207dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/rnd_btn"
                android:text="Save"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>